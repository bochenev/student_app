<div id="marks" v-cloak>

  <div class="container">
    <div class="page__sub-title">
      <button class="btn btn-outline-info mr-10 back-left" onclick="history.back()">Back</button>
      Marks Dictionary
      <% if(isSuperAdmin){ %>
        <button class="btn btn-outline-info ml-2 float-right" @click="onAddNew()">Add</button>
      <% } %>
    </div>
    <table style="width: 100%;">
      <thead>
      <th>ID</th>
      <th>Name</th>
      <th>Weight</th>
      <th>Description</th>
      <% if(isSuperAdmin){ %>
        <th></th>
      <% } %>
      </thead>
      <tbody>

      <tr v-if="isAddNew">
        <td></td>
        <td>
          <input class="form-control" v-model.trim="newItemData.name"/>
        </td>
        <td>
          <input class="form-control" v-model.trim="newItemData.weight"/>
        </td>
        <td>
          <input class="form-control" v-model.trim="newItemData.description"/>
        </td>
        <td>
          <div class="manage_buttons-wrapper">
            <button class="btn btn-outline-info ml-2" @click="save()">Save</button>
            <button class="btn btn-outline-dark ml-2" @click="onCancel()">Cancel</button>
          </div>
        </td>
      </tr>

      <% marks.forEach(function(mark){ %>
      <tr>
        <template v-if="typeof this.editableItemsMap[<%= mark.id %>] !== 'object'">
          <td><%= mark.id %></td>
          <td><%= mark.name %></td>
          <td><%= mark.weight %></td>
          <td><%= mark.description %></td>
        </template>
        <template v-else>
          <td></td>
          <td>
            <input class="form-control" v-model.trim="editableItemsMap[<%= mark.id %>].name"/>
          </td>
          <td>
            <input class="form-control" v-model.trim="editableItemsMap[<%= mark.id %>].weight"/>
          </td>
          <td>
            <input class="form-control" v-model.trim="editableItemsMap[<%= mark.id %>].description"/>
          </td>
        </template>

        <% if(isSuperAdmin){ %>
          <td>
            <div class="manage_buttons-wrapper">
              <template v-if="typeof editableItemsMap[<%= mark.id %>] !== 'object'">
                <button class="btn btn-outline-info ml-2" @click="onEdit(<%= JSON.stringify(mark) %>)">Edit</button>
                <button class="btn btn-outline-danger ml-2" @click="remove(<%= mark.id %>)">Remove</button>
              </template>
              <template v-else>
                <button class="btn btn-outline-success ml-2" @click="update(<%= mark.id %>)">Save</button>
                <button class="btn btn-outline-dark ml-2" @click="onCancel(<%= mark.id %>)">Cancel</button>
              </template>
            </div>
          </td>
        <% } %>
        <% }); %>
      </tr>
      </tbody>
    </table>
  </div>
</div>
<%- /* Expose server-rendered data as window.SAILS_LOCALS :: */ exposeLocalsToBrowser() %>
